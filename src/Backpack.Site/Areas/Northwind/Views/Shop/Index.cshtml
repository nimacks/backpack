
@model Backpack.Site.Models.ProductViewModel


@{
    ViewBag.Title = "Shop Northwind";
}

<h2 class="panel">Catalog</h2>
<div class="row">
    <div class="col-md-3">
        <aside>
            @Html.Partial("_CategoryList",Model.Categories)
        </aside>
    </div>

    <div class="col-md-9">
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Available</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.Price</td>
                        <td>@product.Available</td>
                        <td><button>Buy</button></td>
                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>
 