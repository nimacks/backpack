@using Backpack.Mvc.Helpers
@model  Backpack.Site.Areas.Bootstrap.Models.UserData
@{
  ViewBag.Title = "Bootstrap Check Box MVC Helper";
}

<h2>Bootstrap Check Box MVC Helper</h2>

@using (Html.BeginForm())
{
  <div class="row">
    <div class="col-xs-12 col-md-6 center-block">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Employee Info</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            @Html.CheckBoxBootstrapFor(m => m.IsActive,
                  "IsActive", "Is Active?")
          </div>
          <div class="form-group">
            @Html.CheckBoxBootstrapFor(m => m.IsIn401k,
                  "IsIn401k", "401k?")
          </div>
          <div class="form-group">
            @Html.CheckBoxBootstrapFor(m => m.IsInHealthCare,
                  "IsInHealthCare", "Health Care?")
          </div>
        </div>
        <div class="panel-footer">
          @Html.SubmitButton("Submit")
          @Html.SubmitButton("Cancel", "cancelButton", 
                true, "btn-default")
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 center-block">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Employee Info (Inline)</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            @Html.CheckBoxBootstrapFor(m => m.IsActive,
                                       "IsActive", "Is Active?", true, false, true)
            @Html.CheckBoxBootstrapFor(m => m.IsIn401k,
                                  "IsIn401k", "401k?", false, false, true)
            @Html.CheckBoxBootstrapFor(m => m.IsInHealthCare,
                                  "IsInHealthCare", "Health Care?", true, false, true)
          </div>
        </div>
        <div class="panel-footer">
          @Html.SubmitButton("Submit")
          @Html.SubmitButton("Cancel", "cancelButton", true, "btn-default")
        </div>
      </div>
    </div>
  </div>
}